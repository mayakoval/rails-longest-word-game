<h1>New game</h1>
<div class="tiles">
	<ul>
	  <% @letters.each do |letter| %>
	    <li class="single-tile"><%= letter.capitalize %></li>
	  <% end %>
	</ul>
</div>

<div class="form">
  <form action="/score" method="post" class="form-group text-center">
    <label>What is the longest word you can find?</label><br>
    <!-- Line 17 does the same thing to @letters to pass them as param :letters -->
    <!-- The input will be processed as param :word -->
    <input type="text" name="word" placeholder="Type word here">
    <input type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>
